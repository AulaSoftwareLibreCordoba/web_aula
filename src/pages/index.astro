    altText: "Foto integrante",
    name: "Alejandro Moral Bermejo",
  },
  {
    imgSrc: "/person.avif",
    altText: "Foto integrante",
    name: "Juan Deogracias Moya",
  },
  {
    imgSrc: "/person.avif",
    altText: "Foto integrante",
    name: "Ignacio de Loyola Díaz Jiménez",
  },
  {
    imgSrc: "/person.avif",
    altText: "Foto integrante",
    name: "Álvaro Fernández Amaro",
  },
