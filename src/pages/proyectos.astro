---
import Layout from "../layouts/Layout.astro";
import Btn from "../components/Btn.astro";
import ProjectComponent from "../components/ProjectComponent.jsx";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <Layout title="Aula Software Libre - Proyectos">
      <main
        class="flex flex-col items-center pt-24 md:pt-20 lg:pt-24 xl:pt-28 bg-hero-gradient bg-center bg-cover bg-clip-padding min-h-screen"
        aria-labelledby="main-title"
      >
        <section class="min-h-full w-full scroll-mt-24 text-center mb-20">
          <h1 class="text-center text-5xl p-8">
            <span class="important-text text-white">Nuestros</span>
            <span class="important-text text-main">proyectos</span>
          </h1>

          <div class="flex flex-wrap justify-center m-10 gap-5">
            <ProjectComponent
              client:load
              altText="App luna img"
              imgSrc="/appluna.avif"
              projectTitle="App Luna"
              estado="Cerrado - Terminando..."
              participantes="5"
              description="Aplicación web para el Colegio Virgen del Carmen enfocada en luchar contra el acoso."
              urlForm=""
              isFull={true}
            />
            <ProjectComponent
              client:load 
              altText="Mod minecraft img"
              imgSrc="/modMinecraft.avif"
              projectTitle="Mod Minecraft"
              estado="Cerrado - Iniciando..."
              participantes="5"
              description="Mod de minecraft creado en Java, para un servidor privado."
              urlForm=""
              isFull={true}
            />
            <ProjectComponent
              client:load
              altText="Ciberseguridad img"
              imgSrc="/ciberseguridad.avif"
              projectTitle="Ciberseguridad"
              estado="Abierto - A iniciar"
              participantes="1 - 5"
              description="Proyecto de ciberseguridad con los compañeros de ASIR, cuyo objetivo es la práctica de ataque/defensa a un servidor."
              urlForm=""
              isFull={false}
            />
            <ProjectComponent
              client:load
              altText="Ciberseguridad img"
              imgSrc="/ciberseguridad.avif"
              projectTitle="Ciberseguridad"
              estado="Abierto - A iniciar"
              participantes="1 - 5"
              description="Proyecto de ciberseguridad con los compañeros de ASIR, cuyo objetivo es la práctica de ataque/defensa a un servidor."
              urlForm=""
              isFull={false}
            />
            <ProjectComponent
              client:load
              altText="Ciberseguridad img"
              imgSrc="/ciberseguridad.avif"
              projectTitle="Ciberseguridad"
              estado="Abierto - A iniciar"
              participantes="1 - 5"
              description="Proyecto de ciberseguridad con los compañeros de ASIR, cuyo objetivo es la práctica de ataque/defensa a un servidor."
              urlForm=""
              isFull={false}
            />
            <ProjectComponent
              client:load
              altText="Ciberseguridad img"
              imgSrc="/ciberseguridad.avif"
              projectTitle="Ciberseguridad"
              estado="Abierto - A iniciar"
              participantes="1 - 5"
              description="Proyecto de ciberseguridad con los compañeros de ASIR, cuyo objetivo es la práctica de ataque/defensa a un servidor."
              urlForm=""
              isFull={false}
            />
            <ProjectComponent
              client:load
              altText="Ciberseguridad img"
              imgSrc="/ciberseguridad.avif"
              projectTitle="Ciberseguridad"
              estado="Abierto - A iniciar"
              participantes="1 - 5"
              description="Proyecto de ciberseguridad con los compañeros de ASIR, cuyo objetivo es la práctica de ataque/defensa a un servidor."
              urlForm=""
              isFull={false}
            />
